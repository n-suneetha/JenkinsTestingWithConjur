pipeline {
    agent any
    stages {
        stage("run") {
             steps {
                script {
                    userVar = null
                    passVar = null
                    withCredentials([conjurSecretCredential(credentialsId: 'global-var-2', variable: 'CONJUR_SECRET')]) {
                                 userVar = CONJUR_SECRET
                                 echo "Username: CONJUR_SECRET"
                    }
                    echo "Username: ${userVar}"
                }
            }
        }
    }
}
